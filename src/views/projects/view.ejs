<%- include("../_header") -%> <%- include("../_backend") -%>

<div x-data="{isSettingsOpen: false}">
  <header class="bg-white shadow">
    <div class="container flex justify-between items-center">
      <h1 class="text-xl font-bold leading-tight text-gray-900">
        <%= project.name %>
      </h1>
      <button class="btn-secondary" @click="isSettingsOpen = !isSettingsOpen">
        Settings
      </button>
    </div>
  </header>

  <%- include("../_flash") -%>

  <main>
    <div class="container">
      <div class="bg-white rounded shadow-md">
        <div class="py-4 px-4 md:flex md:items-center md:justify-between">
          <p class="text-sm">
            If you have changed the structure of the Google Sheet click on sync
            to update.
          </p>
          <div class="mt-4 flex md:flex-shrink-0 md:mt-0">
            <a href="/projects/<%= project._id %>/sync" class="btn-primary">
              Sync
            </a>
          </div>
        </div>
      </div>
      <% if(project.endpoints) { %>
      <div class="mt-6">
        <h2 class="text-xl pt-2 pb-4">
          <%=project.endpoints.length%> endpoint(s)
        </h2>
        <% project.endpoints.forEach(endpoint => { %>
        <form method="POST" action="/projects/<%= project._id %>/<%= endpoint.endpointName %>/update">
          <div class="mb-2 bg-white">
            <div class="bg-gray-800 text-white px-4 py-2 rounded-t font-bold">
              <%= endpoint.endpointName %>
            </div>
            <div class="border px-2 py-2 text-gray-900 rounded-b">
              <div class="py-2 px-2 border border-dashed rounded mb-2">
                <p class="text-sm font-medium ml-1 mb-1">Schema</p>
                <% endpoint.schema.forEach(label => { %>
                <span class="px-2 py-1 bg-gray-200 font-medium text-gray-900 text-sm rounded"><%= label %></span>
                <% }) %>
              </div>
              <!-- GET -->
              <div class="flex items-center bg-green-100 rounded px-2 py-2 mb-1">
                <input id="get_<%= endpoint.endpointName %>" name="get" type="checkbox" class="h-5 w-5 mr-2"
                  <%= endpoint.methods.get ? 'checked': '' %>>
                <label for="get_<%= endpoint.endpointName %>"
                  class="font-bold text-green-700 w-20 inline-block">GET</label>
                <span class="text-sm">/api/<%= project._id %>/<%= endpoint.endpointName %></span>
              </div>
              <!-- GET one -->
              <div class="flex items-center bg-green-100 rounded px-2 py-2 mb-1">
                <input id="getone_<%= endpoint.endpointName %>" name="one" type="checkbox" class="h-5 w-5 mr-2"
                  <%= endpoint.methods.one ? 'checked': '' %>>
                <label for="getone_<%= endpoint.endpointName %>"
                  class="font-bold text-green-700 w-20 inline-block">GET</label>
                <span class="text-sm">/api/<%= project._id %>/<%= endpoint.endpointName %>/<span
                    class="text-red-700">{id}</span></span>
              </div>
              <!-- POST -->
              <div class="flex items-center bg-blue-100 rounded px-2 py-2 mb-1">
                <input id="post_<%= endpoint.endpointName %>" name="post" type="checkbox"
                  class="h-5 w-5 mr-2 border-gray-500" <%= endpoint.methods.post ? 'checked': '' %>>
                <label for="post_<%= endpoint.endpointName %>"
                  class="font-bold text-blue-700 w-20 inline-block">POST</label>
                <span class="text-sm">/api/<%= project._id %>/<%= endpoint.endpointName %></span>
              </div>
              <!-- PUT -->
              <div class="flex items-center bg-indigo-100 rounded px-2 py-2 mb-1">
                <input id="put_<%= endpoint.endpointName %>" name="put" type="checkbox" class="h-5 w-5 mr-2"
                  <%= endpoint.methods.put ? 'checked': '' %>>
                <label for="put_<%= endpoint.endpointName %>"
                  class="font-bold text-indigo-700 w-20 inline-block">PUT</label>
                <span class="text-sm">/api/<%= project._id %>/<%= endpoint.endpointName %></span>
              </div>
              <!-- DELETE -->
              <div class="flex items-center bg-red-100 rounded px-2 py-2">
                <input id="delete_<%= endpoint.endpointName %>" name="delete" type="checkbox" class="h-5 w-5 mr-2"
                  <%= endpoint.methods.delete ? 'checked': '' %>>
                <label for="delete_<%= endpoint.endpointName %>"
                  class="font-bold text-red-700 w-20 inline-block">DELETE</label>
                <span class="text-sm">/api/<%= project._id %>/<%= endpoint.endpointName %>/<span
                    class="text-red-700">{id}</span></span>
              </div>
              <button type="submit" class="btn-primary mt-4">Save</button>
            </div>
          </div>
        </form>
        <% }); %>
      </div>
      <% } else { %>
      <p class="text-center text-xl py-6 leading-relaxed text-gray-700">
        You don't have any endpoint. <br />Add tabs to the table and click sync.
      </p>
      <% } %>
    </div>
  </main>

  <div x-show="isSettingsOpen"
    class="fixed bottom-0 inset-x-0 px-4 pb-4 sm:inset-0 sm:flex sm:items-center sm:justify-center">
    <!--
      Background overlay, show/hide based on modal state.
  
      Entering: "ease-out duration-300"
        From: "opacity-0"
        To: "opacity-100"
      Leaving: "ease-in duration-200"
        From: "opacity-100"
        To: "opacity-0"
    -->
    <div x-show="isSettingsOpen" x-transition:enter="ease-out duration-300" x-transition:enter-start="opacity-0"
      x-transition:enter-end="opacity-100" x-transition:leave="ease-in duration-200"
      x-transition:leave-start="opacity-100" x-transition:leave-end="opacity-0"
      class="fixed inset-0 transition-opacity">
      <div class="absolute inset-0 bg-gray-500 opacity-75"></div>
    </div>

    <!--
      Modal panel, show/hide based on modal state.
  
      Entering: "ease-out duration-300"
        From: "opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95"
        To: "opacity-100 translate-y-0 sm:scale-100"
      Leaving: "ease-in duration-200"
        From: "opacity-100 translate-y-0 sm:scale-100"
        To: "opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95"
    -->
    <div x-show="isSettingsOpen" x-transition:enter="ease-out duration-300"
      x-transition:enter-start="opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95"
      x-transition:enter-end="opacity-100 translate-y-0 sm:scale-100" x-transition:leave="ease-in duration-200"
      x-transition:leave-start="opacity-100 translate-y-0 sm:scale-100"
      x-transition:leave-end="opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95"
      class="bg-white rounded-lg overflow-hidden shadow-xl transform transition-all sm:max-w-lg sm:w-full" role="dialog"
      aria-modal="true" aria-labelledby="modal-headline">
      <div class="bg-white px-4 pt-4 pb-4 sm:p-6 sm:pb-4">
        <div class="bg-red-100 border border-red-200 rounded px-4 py-3">
          <h3 class="font-bold">Danger zone</h3>
          <p class="text-sm text-gray-600">
            The suppression of a project is an irreversible operation.
          </p>
          <a href="/projects/<%=project._id%>/delete" class="inline-block btn bg-red-600 text-white mt-4">Delete
            project</a>
        </div>
      </div>
      <div class="bg-gray-100 px-4 py-3 sm:px-6 sm:flex sm:flex-row-reverse">
        <span class="mt-3 flex w-full rounded-md shadow-sm sm:mt-0 sm:w-auto">
          <button type="button" @click="isSettingsOpen = !isSettingsOpen"
            class="inline-flex justify-center w-full btn-secondary">
            Close
          </button>
        </span>
      </div>
    </div>
  </div>
</div>

<%- include("../_footer") -%>