<%- include("../_header") -%> <%- include("../_backend") -%>

<header class="bg-white shadow">
  <div class="container">
    <h1 class="text-xl font-bold leading-tight text-gray-900">
      New Project
    </h1>
  </div>
</header>

<%- include("../_flash") -%>

<main>
  <div class="container">
    <form action="/projects/create" method="POST">
      <div class="form-group">
        <label for="project-name" class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2">Project
          Name</label>
        <input id="project-name" type="text" name="name" placeholder="My Project"
          class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
          required="required" />
      </div>
      <div class="form-group">
        <label for="project-url" class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2">Spreadsheet
          URI</label>
        <input id="project-url" type="text" name="url" placeholder="https://docs.google..."
          class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
          required="required" />
      </div>
      <button type="submit" class="btn-primary mt-2">
        Create
      </button>
    </form>
  </div>
</main>

<%- include("../_footer") -%>