extends ../layout.pug

block vars
  - var title="projects list"

block content
  h2 Projects list
  
  if projects
    table.table
      each project in projects
        tr 
          td= project.name 
          td 
            a.btn.btn-primary(href="/projects/" + project._id) view
          td 
            a.btn.btn-danger(href="/projects/" + project._id + "/delete") delete
  
  p
    a.btn.btn-primary(href="/projects/create") Create a project
  p
    a.btn.btn-secondary(href="/auth/logout") Logout
